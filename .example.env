# Supabase (from dashboard: Project URL, anon public key, service role key)
SUPABASE_URL=url
SUPABASE_ANON_KEY=key
SUPABASE_SECRET_KEY=key
SUPABASE_PROJECT_ID=id

# Required for client-side Supabase (use same URL and anon key as above)
NEXT_PUBLIC_SUPABASE_URL=url
NEXT_PUBLIC_SUPABASE_ANON_KEY=key

# App URL for auth redirects. Use http (not https) for localhost or you'll get ERR_SSL_PROTOCOL_ERROR.
# In production, set to your real URL (e.g. https://yourapp.com).
NEXT_PUBLIC_APP_URL=http://localhost:7000

# Resend (for OTP emails and eligibility summary) â€” https://resend.com
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=onboarding@resend.dev

# Optional: Resend free tier only sends to your account email until you verify a domain.
# Set this to that email (e.g. your@gmail.com) so MVP testing works; other emails get a friendly error.
# Remove this (or verify a domain) when you want to send to any recipient.
# RESEND_DEV_TO=work.keshavkabra@gmail.com

# Admin: any logged-in user who enters this password can access /admin (scheme CRUD). Session lasts 24h.
ADMIN_PASSWORD=your-secure-password